<% include partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center;">New Campground</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text", name="name" placeholder="name" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text", name="image" placeholder="image url" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-control btn-block btn-primary" type="submit">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back to the Campground</a>
        </div>
    </div>
</div>

