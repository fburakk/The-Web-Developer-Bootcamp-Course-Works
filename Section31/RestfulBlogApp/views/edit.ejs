<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="title" value=<%= blog.title%> required>
        </div>
        <div class="field">
            <label>Image URL</label>
            <input type="text" name="blog[image]" value=<%= blog.image%> placeholder="image">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]" required><%= blog.title%></textarea>
            <!--<input type="text" name="blog[body]" placeholder="blog post goes here">-->
        </div>
        <input class="ui violet big basic button" type="submit" value="Update">
    </form>
</div>

<% include partials/footer %>
